<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="812.0" prefWidth="375.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ispw.graphic_controller.GUISearchMusicController">
   <children>
      <TextField fx:id="searchText" layoutX="20.0" layoutY="35.0" prefHeight="47.0" prefWidth="335.0" promptText="Type in something..." style="-fx-background-color: white;">
         <effect>
            <DropShadow offsetY="5.0">
               <color>
                  <Color opacity="0.10325048118829727" />
               </color>
            </DropShadow>
         </effect>
         <font>
            <Font name="SF Pro Display Regular" size="13.0" />
         </font>
      </TextField>
      <VBox fx:id="vbox" layoutX="20.0" layoutY="83.0" prefHeight="716.0" prefWidth="335.0" spacing="5.0" />
      <Button fx:id="goBack" layoutX="2.0" layoutY="3.0" mnemonicParsing="false" onAction="#hidePage" prefHeight="15.0" prefWidth="15.0" style="-fx-background-color: transparent;">
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@img/down-arrow.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="button" layoutX="298.0" layoutY="47.0" mnemonicParsing="false" onAction="#searchTrack" style="-fx-background-color: transparent;">
         <graphic>
            <ImageView fitHeight="27.0" fitWidth="19.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@img/500px-Search_Icon.svg.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</AnchorPane>
